# ======================================================
# Configuration d'Environnement - HotMeet v3
# ======================================================
# ATTENTION: Ne jamais commiter le fichier .env avec de vraies valeurs !
# Copier ce fichier vers .env et remplir avec vos vraies valeurs.

# ======================================================
# Base de Données MongoDB
# ======================================================
# PRODUCTION: mongodb+srv://USERNAME:PASSWORD@cluster.mongodb.net/DATABASE?retryWrites=true&w=majority  
# DEVELOPMENT: mongodb://localhost:27017/coolmeet
MONGODB_URI=mongodb://localhost:27017/coolmeet

# ======================================================
# Sécurité & Authentification  
# ======================================================
# GÉNÉREZ UN SECRET FORT DE 32+ CARACTÈRES (ex: node -e "console.log(crypto.randomBytes(64).toString('hex'))")
JWT_SECRET=your_super_secure_jwt_secret_at_least_32_characters_long
BCRYPT_ROUNDS=12
TOKEN_EXPIRY=7d

# ======================================================
# Cloudinary (Stockage Images)
# ======================================================
# Obtenez vos clés sur: https://cloudinary.com/console
CLOUDINARY_CLOUD_NAME=your_cloud_name
CLOUDINARY_API_KEY=your_api_key  
CLOUDINARY_API_SECRET=your_api_secret

# ======================================================
# PayPal (Paiements Récurrents)
# ======================================================
# Sandbox: https://developer.paypal.com/developer/applications/
# Production: https://www.paypal.com/businessprofile/mytools/apiaccess/firstparty
PAYPAL_CLIENT_ID=your_paypal_client_id
PAYPAL_SECRET=your_paypal_secret
PAYPAL_MODE=sandbox
PAYPAL_PLAN_ID=your_monthly_subscription_plan_id
PAYPAL_RETURN_URL=http://localhost:3000/payment/success
PAYPAL_CANCEL_URL=http://localhost:3000/payment/cancel  
PAYPAL_WEBHOOK_URL=http://localhost:3000/api/paypal/webhook
PAYPAL_WEBHOOK_ID=your_webhook_id
PAYPAL_ENVIRONMENT=sandbox
PREMIUM_PRICE=5.75

# ======================================================
# Configuration Serveur
# ======================================================
NODE_ENV=development
PORT=3000

# ======================================================
# URLs Application
# ======================================================
APP_URL=http://localhost:3000
CLIENT_URL=http://localhost:3000

# ======================================================
# Email (Nodemailer)
# ======================================================
# Gmail: Utilisez un "App Password" pas votre mot de passe principal
# Guide: https://support.google.com/accounts/answer/185833
EMAIL_SERVICE=gmail
EMAIL_USER=your_email@gmail.com
EMAIL_PASS=your_app_specific_password

# ======================================================
# Uploads & Fichiers
# ======================================================
MAX_FILE_SIZE=5242880  # 5MB en bytes
UPLOAD_PATH=./uploads  # Local: ./uploads | Render: /var/data/uploads

# ======================================================
# WebRTC (Cam-to-Cam)
# ======================================================
WEBRTC_STUN_SERVER=stun:stun.l.google.com:19302
# WEBRTC_TURN_SERVER=turn:your-turn-server.com:3478  # Optionnel pour production

# ======================================================
# Sécurité Headers & Rate Limiting
# ======================================================
RATE_LIMIT_WINDOW_MS=900000  # 15 minutes
RATE_LIMIT_MAX_REQUESTS=100  # Max requêtes par fenêtre
CORS_ORIGIN=http://localhost:3000